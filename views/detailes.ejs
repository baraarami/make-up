<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/css/style.css">
    <title>Document</title>
</head>
<body>
    <header>
        <div class="header-left">
            <a href="/"> Home</a>
            <a href="/searches">All Product</a>
            <a href="/mycard">My Card </a>
        </div>
    </header>

    <div id="card">
        
    <%data.forEach(item => {%>
        <div id="subcard">
            <h3>name : <%=item.name%></h3>
            <h2>price :<%=item.price%></h2>
            <img src="<%item.image_link%>" alt="">
            <p>description: <%item.description%></p>


        <button id="updatebtn">update</button>
        <section id="updateform">
        <form action="/update/<%=item.id%>?_method=put" method="POST">
        <input type="text" name="name" value="<%=item.name%>">
        <input type="text" name="price" value="<%=item.price%>">
        <input type="text" name="img" value="<%item.image_link%>">
        <input type="text" name="description" value="<%item.description%>">
        <input type="submit" value="Update">
        </form>
        </section>

<form action="/delete/<%=item.id%>??_method=delete" method="POST">
<input type="submit" value="Delete">
</form>

        </div>
        
    <%});%>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

     <script src="/js/app.js"></script>
</body>
</html>